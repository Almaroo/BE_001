@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to simple shop!</h1>
    
    <ul class="list-group">
      @foreach (var item in Model.FeaturedItems)
      {
        <li class="list-group-item">
            <div class="card" style="width: 18rem;">
              <img src="@item.ImgUrl" class="card-img-top" alt="@item.Name">
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                  <p class="card-text">@item.Description</p>
                  <p class="card-text">@item.Price.ToString("C")</p>
                <form id="@item.ItemId" asp-area="Cart" asp-page="/Cart/CheckOut" method="post">
                        <input type="hidden" name="@nameof(item.ItemId)" value="@item.ItemId" />
                        <input type="hidden" name="returnUrl" value="~/" /> 
                        <span class="card-text p-1">
                            <button type="submit"
                                    class="btn btn-success btn-sm pull-right" style="float:right">
                                Add To Cart
                            </button>
                        </span>
                    </form>
              </div>
            </div>
        </li>
      }
    </ul>
</div>